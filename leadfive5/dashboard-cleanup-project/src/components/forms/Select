// This file defines a Select component for dropdown selections in forms.

import React from 'react';

interface SelectProps {
    options: Array<{ value: string; label: string }>;
    value: string;
    onChange: (value: string) => void;
    placeholder?: string;
}

const Select: React.FC<SelectProps> = ({ options, value, onChange, placeholder }) => {
    return (
        <select value={value} onChange={(e) => onChange(e.target.value)} placeholder={placeholder}>
            {placeholder && <option value="">{placeholder}</option>}
            {options.map((option) => (
                <option key={option.value} value={option.value}>
                    {option.label}
                </option>
            ))}
        </select>
    );
};

export default Select;