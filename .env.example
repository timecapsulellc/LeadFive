LEADFIVE_MAINNET_IMPLEMENTATION=your_implementation_address_here
LEADFIVE_TESTNET_PROXY=
LEADFIVE_TESTNET_IMPLEMENTATION=

# Admin Wallet (Deployer will have all admin rights initially)
